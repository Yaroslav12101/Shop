{% extends "base.html.twig" %}

{% block body %}
    <div class="container product">
        <div class="row">
            <div class="col">
                <img src="images/products/{{ product.slug }}/{{ product.images }}" class="card-img-top" title="{{ product.name }}" alt="{{ product.name }}">
            </div>
            <div class="col-8">
                <h3><p>{{ product.name }}</p></h3>
                <h5><p>{{ product.price }} грн</p></h5>
                <h6><p>{{ product.specifications }}</p></h6>
                <p><a href="#" class="btn btn-success add-to-cart">Купить</a></p>
            </div>
        </div></br>
        <p>{{ product.description }}</p>
    </div>
{% endblock %}